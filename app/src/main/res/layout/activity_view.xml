<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    tools:context=".ViewActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_image"
        android:scaleType="fitXY"
        android:contentDescription="image"
        android:id="@+id/image_view_activity"/>

    <TextView
        android:id="@+id/textView_view_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_activity"
        android:text="My Car"
        android:textSize="24sp"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textStyle="italic"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        android:layout_below="@+id/textView_view_activity"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/delete_btn_background"
        android:backgroundTint="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_below="@+id/btn_delete"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:text="Rotate Device for portrait images."/>

</RelativeLayout>